# Weatherbot Configuration Example
# Copy this to .env and customize for your location

# Required: Your home coordinates (decimal degrees)
HOME_LAT=25.0582
HOME_LON=-77.3431

# Optional: Use county-level intersection instead of just point
USE_COUNTY_INTERSECT=false
COUNTY_GEOJSON_PATH=

# Notification settings
TOAST_ENABLED=true

# Alert behavior
ALERT_COOLDOWN_MINUTES=60

# AI Enhancement (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Logging
LOG_LEVEL=INFO
